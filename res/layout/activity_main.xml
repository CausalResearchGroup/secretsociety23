private void sendEmergencyAlert() {
        if (currentLocation == null) {
            Toast.makeText(this, "Waiting for location. Try again shortly.", Toast.LENGTH_SHORT).show();
            return;
        }
        String message = "EMERGENCY ALERT from Joseph Greggory Pitner.\nLocation: https://maps.google.com/?q="
                + currentLocation.getLatitude() + "," + currentLocation.getLongitude();

        SmsManager smsManager = SmsManager.getDefault();
        for (String contact : emergencyContacts) {
            smsManager.sendTextMessage(contact, null, message, null, null);
        }
        Toast.makeText(this, "Emergency alert sent!", Toast.LENGTH_SHORT).show();
    }

    private void startPeriodicCheckIn() {
        handler.postDelayed(new Runnable() {
            @Override
            public void run() {
                if (currentLocation != null) {
                    String checkinMsg = "Joseph Check-In OK\nLocation: https://maps.google.com/?q="
                            + currentLocation.getLatitude() + "," + currentLocation.getLongitude();
                    SmsManager.getDefault().sendTextMessage(emergencyContacts[0], null, checkinMsg, null, null);
                }
                handler.postDelayed(this, 300000); // repeat every 5 minutes
            }
        }, 60000); // Start after 1 minute
    }
}
